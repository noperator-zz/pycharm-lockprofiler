<idea-plugin>
    <id>com.jusx.pycharm.colored_lineprofiler</id>
    <name>Plugin display name here</name>
    <vendor email="support@yourcompany.com" url="http://www.yourcompany.com">YourCompany</vendor>

    <description><![CDATA[
    Enter short description for your plugin here.<br>
    <em>most HTML tags may be used</em>
    ]]></description>

    <!-- please see https://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.python</depends>
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
        <enterHandlerDelegate implementation="com.jusx.pycharm.colored_lineprofiler.handlers.MyEnterHandler" />
        <backspaceHandlerDelegate implementation="com.jusx.pycharm.colored_lineprofiler.handlers.MyBackspaceHandler" />
        <typedHandler implementation="com.jusx.pycharm.colored_lineprofiler.handlers.TypedHandler" />
        <notificationGroup id="Colored Lineprofiler Notifications" displayType="BALLOON" />
        <!-- Extensions for settings -->
        <applicationService serviceImplementation="com.jusx.pycharm.colored_lineprofiler.settings.SettingsState"/>
        <projectConfigurable parentId="tools" instance="com.jusx.pycharm.colored_lineprofiler.settings.SettingsConfigurable"
                             id="com.jusx.pycharm.colored_lineprofiler.settings.SettingsConfigurable"
                             displayName="Colored Lineprofiler"
                             nonDefaultProject="false"/>
    </extensions>

    <actions>
        <!-- Add your actions here -->
        <group id="com.jusx.pycharm.colored_lineprofiler.VisualizeProfileGroupedActions" text="Visualize Profile" popup="true"
                class="com.jusx.pycharm.colored_lineprofiler.actions.VisualiseProfilerActionGroup">
            <add-to-group group-id="ProjectViewPopupMenu" anchor="first"/>
<!--            <add-to-group group-id="EditorPopupMenu" anchor="first"/>-->
        </group>
        <action id="com.jusx.pycharm.colored_lineprofiler.actions.VisualizeTotalTime"
                class="com.jusx.pycharm.colored_lineprofiler.actions.VisualiseLineProfilerAction" text="By Total Time"
                description="Visualizes profile with colored-lineprofiler plugin">
            <add-to-group group-id="com.jusx.pycharm.colored_lineprofiler.VisualizeProfileGroupedActions" anchor="first"/>
        </action>
        <action id="com.jusx.pycharm.colored_lineprofiler.actions.VisualizeTotalTimePerFunction"
                class="com.jusx.pycharm.colored_lineprofiler.actions.VisualiseLineProfilerAction" text="By Total Time Per Function"
                description="Visualizes profile with colored-lineprofiler plugin">
            <add-to-group group-id="com.jusx.pycharm.colored_lineprofiler.VisualizeProfileGroupedActions" anchor="after" relative-to-action="com.jusx.pycharm.colored_lineprofiler.actions.VisualizeTotalTime"/>
        </action>
    </actions>
</idea-plugin>